/* pages/order/order.wxss */
.section{
  margin-bottom: 50rpx;
  margin-left: 25rpx;
  margin-right: 30rpx;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.section__title{
    padding-left: 20rpx;
    width: 40%;
    height: 20rpx;
    align-items: left;
}
.picker{
  background-color: #FFFFFF;
  width: 100%;
  height: 30rpx;
  align-items: left;
}
.input{
  width: 60%;
  height: 40rpx;
  align-items: left;
  border-bottom: 2rpx solid black;
}
.submit{
  height: 55rpx;
  font-size: 40rpx;
  width: 80%;
  margin-left: 10%;
  padding-left: 35%;
}
.bottom{
  height: 5%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  width: 100%;
  align-items: center;
  text-align: center;
}
.mine{
  width: 50%;
  font-size: 40rpx;
  background-color: rgb(184, 185, 184);
}
.want{
  width: 50%;
  font-size: 40rpx;
  background-color: rgb(173, 230, 140);
}